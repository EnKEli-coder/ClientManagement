@using GestionClientesEntidades.Models;
@using System.Text.Json;
@model Client


@if(Model != null)
{
    <section id="client-info-form">
        <div id="client-details-section">
            <form id="form" onsubmit="updateClient(@Model.ID, event)">
                <div class="form-field" id="name">
                    <label id="name-label" for="name-input">Nombre*</label>
                    <input type="text" id="name-input" class="client-form-field" disabled value="@Model.Name" required>
                </div>
                <div class="form-field" id="number">
                    <label id="number-label" for="number-input">Numero de Asesor</label>
                    <input type="number" id="number-input" class="client-form-field" disabled value="@Model.ConsultantId">
                </div>
                <div class="form-field" id="type">
                    <label id="type-label" for="type-select">Tipo</label>
                    <select id="type-select" class="client-form-field select" disabled>
                        @if (Model.ConsultantType == "Asesor")
                        {
                            <option value="Asesor" selected>Asesor</option>
                            <option value="Cliente">Cliente</option>
                        }
                        else
                        {
                            <option value="Asesor">Asesor</option>
                            <option value="Cliente" selected>Cliente</option>
                        }
                    </select>
                </div>
                <div class="form-field" id="direction">
                    <label id="direction-label" for="direction-input">Direccion</label>
                    <input type="text" id="direction-input" class="client-form-field" value="@Model.Address" disabled>
                </div>
                <div class="form-field" id="email">
                    <label id="email-label" for="email-input">Correo electrónico</label>
                    <input type="email" id="email-input" class="client-form-field" value="@Model.Email" disabled>
                </div>
                <div class="form-field" id="password">
                    <label id="password-label" for="password-input">Contraseña</label>
                    <input type="text" id="password-input" class="client-form-field" value="@Model.Password" disabled>
                </div>
                <div class="form-field" id="phone">
                    <label id="phone-label" for="phone-input">Telefono</label>
                    <input type="tel" id="phone-input" class="client-form-field" value="@Model.Telephone" disabled>
                </div>
                <div class="form-field" id="observations">
                    <label id="observations-label" for="observations-textarea">Observaciones</label>
                    <textarea id="observations-textarea" class="client-form-field" disabled>@Model.Observations</textarea>
                </div>
            </form>
        </div>
        <div id="buttons-section">
            <button id="btn-edit" onclick="allowEdit()">
                <span class="icon edit-icon"></span>
                Editar
            </button>
            <div id="btns-wrapper">
                <button id="btn-cancel" onclick="cancelEdit(@Model.ID)">
                    <span class="icon cross-icon"></span>
                    Cancelar
                </button>
                <button type="submit" form="form" id="btn-save" onclick="addSubmittedState()">
                    <span class="icon save-icon"></span>
                    Guardar
                </button>
            </div>
        </div>
    </section>
}
