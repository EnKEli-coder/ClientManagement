@using GestionClientesEntidades.Models;
@model Product

@if(Model != null)
{
    <li class="product-item" onfocus="itemFocus(event)" onblur="itemBlur(event)">
        <input type="text" id="key-input" class="product-input" value="@Model.ProductKey" form="order-form" placeholder="Código">
        <input type="text" id="description-input" class="product-input" value="@Model.ProductDescription" form="order-form" placeholder="Descripción">
        <div id="quantity-controler">
            <div class="circle-div">
                <span class="icon minus-icon" onclick="quantitySustract(event)"></span>
            </div>
            <p id="quantity">@Model.Quantity</p>
            <div class="circle-div">
                <span class="icon add-icon" onclick="quantityAdd(event)"></span>
            </div>
        </div>
        <div class="price-input-container">
            $
            <input type="number"
                   id="price-input"
                   class="product-input"
                   oninput="calcularTotal()"
                   value="@Model.ProductPrice"
                   form="order-form"
                   step="any"
                   required>
        </div>
        <span class="icon cross-icon"></span>
    </li>
}

